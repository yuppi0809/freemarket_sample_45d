= render 'layouts/header'
%main.l-container.clearfix
  .wrapper
    = render 'users/sidebar'

    .l-content
    %section.mypage-tab__container
      %h2.mypage-tab__head 出品した商品
      %ul.listing__tabs
        %li
          %h3= link_to '出品中', user_listings_path
        %li
          %h3= link_to '取引中', in_progress_user_listings_path
        %li.active
          %h3= link_to '売却済み', solds_user_listings_path
        %li
      .tab-content
        %ul.mypage-item__list
          - if @products.present?
            = render partial: 'listings/mypage_items', collection: @products, as: :product
          - else
            .none-content
              = image_tag "mercari_logo_grey-ish", class: 'logo'
              %p 売却済の商品がありません
= render 'layouts/footer'
